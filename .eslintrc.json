{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  //!   "parser": "@typescript-eslint/parser", replaced
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "spread": true
    }
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "semi": 2,
    "annoying-rule-we-want-disabled": 0
  }
}
